<%- include('../partials/head') %>
<%- include('../partials/header') %>
<% if (user && user.isAdmin) { %>
<div class="admin-layout" style="display:flex;min-height:calc(100vh - 80px);background:#f7f8fa; padding-top:70px;">
  <%- include('../partials/admin_sidebar', { user: user, activePage: 'postjob' }) %>
  <div style="flex:1;">
<% } %>

<section class="job-post-form" style="padding: 3rem 0; background: #f7f8fa; min-height: 60vh;">
  <div class="container" style="max-width: 700px; margin: 0 auto; background: #fff; border-radius: 18px; box-shadow: 0 4px 24px rgba(0,0,0,0.08); padding: 2.5rem 2rem;">
    <h1 style="font-size: 2rem; font-weight: 700; margin-bottom: 1.2rem; color: #222; letter-spacing: 0.01em;">Post a Sponsored Job</h1>
    <form method="post">
      <input type="text" name="title" placeholder="Job Title" required style="width:100%;margin-bottom:1rem;padding:0.8rem 1rem;border-radius:8px;border:1px solid #e0e3e8;font-size:1.1rem;">
      <input type="text" name="company" placeholder="Company Name" required style="width:100%;margin-bottom:1rem;padding:0.8rem 1rem;border-radius:8px;border:1px solid #e0e3e8;font-size:1.1rem;">
      <input type="text" name="location" placeholder="Location (optional)" style="width:100%;margin-bottom:1rem;padding:0.8rem 1rem;border-radius:8px;border:1px solid #e0e3e8;font-size:1.1rem;">
      <input type="text" name="job_url" placeholder="Job URL (optional)" style="width:100%;margin-bottom:1rem;padding:0.8rem 1rem;border-radius:8px;border:1px solid #e0e3e8;font-size:1.1rem;">
      <textarea name="description" placeholder="Job Description" required style="width:100%;margin-bottom:1.2rem;padding:0.8rem 1rem;border-radius:8px;border:1px solid #e0e3e8;font-size:1.1rem;min-height:120px;"></textarea>
      <button type="submit" class="btn-primary" style="padding:0.7rem 2.2rem;font-size:1.1rem;border-radius:8px;">Submit</button>
    </form>
    <p class="note" style="color:#888;margin-top:1.5rem;font-size:1rem;text-align:center;">Sponsored job posting is in beta. Functionality coming soon.</p>
  </div>
</section>

<%- include('../partials/footer') %>
<% if (user && user.isAdmin) { %></div></div><% } %>
