<section class="newsletter" style="background:#111; color:#fff; padding: 48px 0;">
  <div class="container">
    <div class="newsletter-container" style="display:flex; flex-wrap:wrap; align-items:center; justify-content:space-between; gap:32px;">
      <div class="newsletter-content">
        <div class="newsletter-badge">
          <span class="badge-dot" style="background:#fff;"></span>
          <span>Weekly Newsletter</span>
        </div>
        <h2 style="color:#fff;">Stay ahead of the curve</h2>
        <p style="color:#ccc;">Join 25,000+ digital nomads who get our exclusive guides, tools, and opportunities delivered every Tuesday.</p>
        <div class="newsletter-benefits">
          <div class="benefit" style="color:#fff;">Expert tips</div>
          <div class="benefit" style="color:#fff;">Remote job leads</div>
          <div class="benefit" style="color:#fff;">Visa updates</div>
          <div class="benefit" style="color:#fff;">AI tools</div>
        </div>
      </div>
      <div class="newsletter-form">
        <form class="signup-form" id="newsletter-form" style="display:flex; flex-direction:column; align-items:flex-start; gap:12px;">
          <div class="form-group" style="display:flex; gap:8px;">
            <input type="email" name="email" placeholder="Your email address" required
              style="background:#222; color:#fff; border:1px solid #444; border-radius:8px; padding:12px 16px; font-size:1.1rem; min-width:220px; outline:none; transition:border 0.2s;"
              onfocus="this.style.border='1.5px solid #fff'" onblur="this.style.border='1px solid #444'">
            <button type="submit" class="btn-primary" style="background:#fff; color:#111; border-radius:8px; padding:12px 22px; font-weight:700; font-size:1.1rem; border:none; cursor:pointer;">Subscribe</button>
          </div>
          <p class="form-disclaimer" style="color:#aaa; font-size:0.98rem;">No spam. Unsubscribe anytime. Free forever.</p>
        </form>
      </div>
    </div>
  </div>
</section>
