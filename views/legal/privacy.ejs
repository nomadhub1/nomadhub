    .legal-main {
      max-width: 800px;
      margin: 60px auto 40px auto;
      padding: 2.5rem 2rem;
      background: #fff;
      border-radius: 18px;
      box-shadow: 0 2px 16px rgba(0,0,0,0.06);
      border-top: 6px solid #ff6600;
    }
    .legal-main h1 {
      color: #ff6600;
      font-size: 2.2rem;
      margin-bottom: 1.2em;
      font-weight: 700;
      letter-spacing: -1px;
    }
    .legal-main h2 {
      color: #222;
